<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".activities.influencer_questionaries.InfluencerQuestionaries1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="105dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_margin_16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_back_ios_24">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/default_margin_16dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:text="INFLUENCER"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/toolbartv">

            </TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/default_margin_16dp"
        android:src="@drawable/cbmlogo">

    </ImageView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFLUENCER"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_margin_16dp"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_8dp"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:textAlignment="center">
        </TextView>


        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/colorWhite"
            android:layout_marginTop="@dimen/default_margin_16dp">

        </View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tell us a little about yourself!  Helping us understand what your preferences are makes building your beautiful world with CASA BEAU MONDE limitless!  This will create your foundation for successful creation and collaboration."
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_8dp">

        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/margin_8dp"
            android:background="@drawable/whiteborder"
            android:hint="DESCRIBE WHO AND WHAT YOUR BUSINESS CATERS TO?"
            android:textSize="@dimen/textsize_12sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textAlignment="textStart"
            android:gravity="start"
            android:padding="@dimen/margin_8dp">

        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/margin_8dp"
            android:background="@drawable/whiteborder"
            android:hint="WHAT ARE YOUR SPECIALTIES (FASHION/LUXURY FASHION,
BEAUTY, ETC.)"
            android:textSize="@dimen/textsize_12sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textAlignment="textStart"
            android:gravity="start"
            android:padding="@dimen/margin_8dp">

        </EditText>
<EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/margin_8dp"
            android:background="@drawable/whiteborder"
            android:hint="TOP 10 FAVORITE BRANDS"
            android:textSize="@dimen/textsize_12sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textAlignment="textStart"
            android:gravity="start"
            android:padding="@dimen/margin_8dp">

        </EditText>


    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/influ_continue_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonheight"
        android:layout_gravity="center"
        android:layout_above="@+id/dots"
        android:layout_margin="@dimen/default_margin_16dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonheight"
            android:layout_gravity="center"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="Continue"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="18sp">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:src="@drawable/ic_arrow">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/default_margin_16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/ic_dot">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/ic_dot_gray">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/ic_dot_gray">

        </ImageView>







    </LinearLayout>
</RelativeLayout>