<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context=".activities.register.userRegister.RegisterTypeScreen">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:background="@android:color/transparent">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textAllCaps="true"
                android:textSize="@dimen/toolbartv"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true">

            </TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cbmlogo"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/textsize_16sp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How Do You Want Use CBM?"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="@dimen/textsize_24sp">

    </TextView>

    <View
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/textsize_16sp"
        android:background="@color/colorWhite">

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_32dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/personalcard"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="@dimen/textsize_24sp"
            android:layout_alignParentLeft="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">


                <TextView
                    android:id="@+id/textRetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PERSONAL"
                    android:drawableTop="@drawable/personal"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite">

                </TextView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/busissnesscard"
            android:layout_marginLeft="@dimen/default_margin_16dp"
            android:layout_width="170dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/textsize_24sp"
            android:layout_height="170dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">


                <TextView
                    android:id="@+id/textInfluencer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/bussiness"
                    android:textAlignment="center"
                    android:text="BUSINESS"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite">

                </TextView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        
    </RelativeLayout>

    <Button
        android:id="@+id/continue_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonheight"
        android:layout_marginLeft="@dimen/textsize_24sp"
        android:layout_marginRight="@dimen/textsize_24sp"
        android:layout_marginTop="@dimen/textsize_24sp"
        android:background="@color/colorWhite"
        android:text="Continue"
        android:textSize="@dimen/textsize_24sp"
        android:textColor="@color/colorBlack"
        android:paddingRight="@dimen/default_margin_16dp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_24">

    </Button>


</LinearLayout>