<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_viewProfile"
    tools:context=".fragments.profile.ViewProfile">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/viewprofile_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                android:background="#00000000"
                android:layout_marginLeft="@dimen/default_margin_16dp">

            </ImageButton>

            <TextView
                android:id="@+id/viewprofile__username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_centerInParent="true"
                android:textSize="@dimen/textsize_16sp"
                android:textColor="@color/colorWhite">

            </TextView>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textsize_16sp"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/viewprofile_profilePic"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop">

                </de.hdodenhof.circleimageview.CircleImageView>

                <ImageView
                    android:id="@+id/viewprofile_changetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/edit">

                </ImageView>
            </RelativeLayout>

            <TextView
                android:id="@+id/viewprofile_usernamefull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_24sp">

            </TextView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/default_margin_16dp">


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:background="@drawable/whitecirclebackground"
                    android:src="@drawable/facebook">

                </ImageButton>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:background="@drawable/whitecirclebackground"
                    android:src="@drawable/instagram">

                </ImageButton>


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/whitecirclebackground"
                    android:src="@drawable/twitter">

                </ImageButton>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/default_margin_16dp"
                android:background="@color/colorWhite">

            </View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_16dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/viewprofile_followbt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_40dp"
                    android:background="@color/colorWhite"
                    android:text="Follow"
                    android:drawableLeft="@drawable/ic_userprofile"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="@dimen/margin_8dp"
                    android:paddingRight="@dimen/margin_8dp"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/margin_8dp">

                </Button>

                <LinearLayout
                    android:id="@+id/viewprofile_followinglayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/viewprofile__followingcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_16sp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Following"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_16sp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewprofile_followerslayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/viewprofile_followerscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_16sp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Followers"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_16sp">

                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/default_margin_16dp"
                android:background="@color/colorWhite">
            </View>


            <Button
                android:id="@+id/viewprofile__mygigs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Gigs"
                android:layout_marginLeft="@dimen/margin_40dp"
                android:layout_marginRight="@dimen/margin_40dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_8dp">

            </Button>
        </LinearLayout>
    </ScrollView>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/viewprofile_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        android:layout_alignParentBottom="true"
        app:tabIndicatorColor="@color/colorWhite"
        app:tabTextColor="@color/colorWhite">

    </com.google.android.material.tabs.TabLayout>
</RelativeLayout>