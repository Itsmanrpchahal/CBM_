<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiteborder">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_32dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <EditText
                android:id="@+id/aditemtocloset_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8dp"
                android:hint="Title"
                android:inputType="text"
                android:textSize="@dimen/textsize_16sp"
                android:textColor="@color/colorTextHint"
                android:textColorHint="@color/colorTextHint"
                android:padding="@dimen/margin_8dp"
                android:background="@drawable/roundcorners">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <EditText
                android:id="@+id/aditemtocloset_decs"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="@dimen/margin_8dp"
                android:hint="Description"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:inputType="text"
                android:textSize="@dimen/textsize_16sp"
                android:textColor="@color/colorTextHint"
                android:textColorHint="@color/colorTextHint"
                android:padding="@dimen/margin_8dp"
                android:background="@drawable/roundcorners">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40dp"
                android:layout_margin="@dimen/margin_8dp">

                <Spinner
                    android:id="@+id/additemclosets_categoryspinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:background="@drawable/roundcorners">

                </Spinner>

                <TextView
                    android:id="@+id/additemclosets_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select Category"
                    android:textColor="@color/colorBlack"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_8dp">

                </TextView>
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/picture"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8dp"
                android:background="@drawable/roundcorners"
                android:orientation="horizontal"
                android:padding="@dimen/margin_8dp">

                <Button
                    android:id="@+id/additemclosets__upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite">

                </Button>


                <TextView
                    android:id="@+id/additemclosets__uploadfilename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_16sp">

                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <Spinner
                android:id="@+id/additemclosets_Sizespinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40dp"
                android:layout_margin="@dimen/margin_8dp"
                android:background="@drawable/roundcorners"
                >

            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <Spinner
                android:id="@+id/additemclosets_Colorpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40dp"
                android:layout_margin="@dimen/margin_8dp"
                android:background="@drawable/roundcorners"
                >

            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brand"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <Spinner
                android:id="@+id/additemclosets_Brandpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40dp"
                android:layout_margin="@dimen/margin_8dp"
                android:background="@drawable/roundcorners"
                >

            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <EditText
                android:id="@+id/aditemtocloset_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8dp"
                android:hint="Price"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:inputType="number"
                android:textSize="@dimen/textsize_16sp"
                android:textColor="@color/colorTextHint"
                android:textColorHint="@color/colorTextHint"
                android:padding="@dimen/margin_8dp"
                android:background="@drawable/roundcorners">

            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/default_margin_16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/aditemtocloset_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="false">

                </Button>

                <Button
                    android:id="@+id/aditemtocloset_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="false"
                    android:layout_marginLeft="@dimen/default_margin_16dp">

                </Button>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>




</LinearLayout>