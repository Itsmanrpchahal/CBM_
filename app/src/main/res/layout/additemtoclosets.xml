<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:fontFamily="@font/oswaldlight"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <EditText
                android:id="@+id/aditemtocloset_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8dp"
                android:hint="Test Item Title"
                android:inputType="text"
                android:textSize="@dimen/textsize_16sp"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:backgroundTint="@color/colorWhite"
                android:padding="@dimen/margin_8dp">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textStyle="bold"
                android:fontFamily="@font/oswaldlight"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <EditText
                android:id="@+id/aditemtocloset_decs"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="@dimen/margin_8dp"
                android:hint="Enter Item Description"
                android:gravity="start"
                android:inputType="text"
                android:textSize="@dimen/textsize_16sp"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:padding="@dimen/margin_8dp"
                android:backgroundTint="@color/colorWhite">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:fontFamily="@font/oswaldlight"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40dp"
                android:layout_margin="@dimen/margin_8dp">

                <Spinner
                    android:id="@+id/additemclosets_categoryspinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:backgroundTint="@color/colorWhite">

                </Spinner>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:background="@color/colorWhite">

            </View>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image Upload"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8dp"
                android:background="@drawable/whiteborder"
                android:orientation="horizontal"
                android:padding="4dp">

                <Button
                    android:id="@+id/additemclosets__upload"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Upload"
                    android:background="@color/colorWhite"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack">

                </Button>


                <TextView
                    android:id="@+id/additemclosets__uploadfilename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Filename123.png"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textsize_16sp">

                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:fontFamily="@font/oswaldlight"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40dp"
                android:layout_margin="@dimen/margin_8dp">

                <Spinner
                    android:id="@+id/additemclosets_Sizespinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:backgroundTint="@color/colorWhite"
                    >

                </Spinner>

                <TextView
                    android:id="@+id/additemclosets_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select Brand"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_8dp">

                </TextView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:background="@color/colorWhite">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/oswaldlight"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40dp"
                android:layout_margin="@dimen/margin_8dp">

                <Spinner
                    android:id="@+id/additemclosets_Colorpinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:backgroundTint="@color/colorWhite">

                </Spinner>

                <TextView
                    android:id="@+id/additemclosets_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select Brand"
                    android:visibility="gone"
                    android:textColor="@color/colorWhite"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_8dp">

                </TextView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:background="@color/colorWhite">

            </View>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brand"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/oswaldlight"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40dp"
                android:layout_margin="@dimen/margin_8dp">

                <Spinner
                    android:id="@+id/additemclosets_Brandpinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:backgroundTint="@color/colorWhite"
                    >

                </Spinner>

                <TextView
                    android:id="@+id/additemclosets_brands"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select Brand"
                    android:visibility="gone"
                    android:textColor="@color/colorWhite"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_8dp">

                </TextView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:background="@color/colorWhite">

            </View>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:fontFamily="@font/oswaldlight"
                android:textAllCaps="true"
                android:visibility="gone"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <EditText
                android:id="@+id/aditemtocloset_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8dp"
                android:hint="Price"
                android:visibility="gone"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:inputType="numberDecimal"
                android:textSize="@dimen/textsize_16sp"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:padding="@dimen/margin_8dp"
                android:backgroundTint="@color/colorWhite">

            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/default_margin_16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/aditemtocloset_add"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Add"
                    android:fontFamily="@font/oswaldlight"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="true">

                </Button>

                <Button
                    android:id="@+id/aditemtocloset_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:visibility="gone"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="false"
                    android:layout_marginLeft="@dimen/default_margin_16dp">

                </Button>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>




</LinearLayout>