<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="@dimen/margin_8dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you sure?"
                android:gravity="center"
                android:layout_margin="@dimen/textsize_16sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please confirm you want to cancel the subscription to this plan.If you cancel your subscripition,you will lose access to the features associated with this plan at the end of your current billing cicle.You can still use the plan features until that time."
                android:textColor="@color/colorTextHint"
                android:layout_margin="@dimen/textsize_16sp"
                android:textAlignment="center"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_weight="2">

                <Button
                    android:id="@+id/keepsubscrition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blackroundcorner"
                    android:text="Keep subsription"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textAllCaps="false">

                </Button>

                <Button
                    android:id="@+id/cancelsubscrition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/blackroundcorner"
                    android:text="Cancel subsription"
                    android:textAllCaps="false">

                </Button>
            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>