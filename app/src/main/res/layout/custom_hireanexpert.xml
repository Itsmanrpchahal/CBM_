<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8dp"
    android:padding="1dp"
    android:background="@drawable/whiteborderblack">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_8dp"
                android:paddingRight="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp">

                <ImageView
                    android:id="@+id/hireanexpert_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                </ImageView>


                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="USERNAME"
                    android:fontFamily="@font/oswaldlight"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginTop="5dp">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/hireanexpert_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_toLeftOf="@id/hireanexpert_hours"
                android:layout_toRightOf="@id/layout1"
                android:layout_marginTop="@dimen/default_margin_16dp"
                android:text="Name"
                android:fontFamily="@font/oswaldlight"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_16sp"
                android:layout_gravity="center">

            </TextView>


            <TextView
                android:id="@+id/hireanexpert_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desc"
                android:fontFamily="@font/oswaldlight"
                android:layout_toRightOf="@id/layout1"
                android:layout_marginRight="@dimen/margin_8dp"
                android:layout_below="@id/hireanexpert_ratetype"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_14sp">

            </TextView>

            <TextView
                android:id="@+id/hireanexpert_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours"
                android:fontFamily="@font/oswaldlight"
                android:layout_marginTop="@dimen/default_margin_16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_8dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <TextView
                android:id="@+id/hireanexpert_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:fontFamily="@font/oswaldlight"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/hireanexpert_hours"
                android:layout_marginRight="@dimen/margin_8dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <TextView
                android:id="@+id/hireanexpert_ratetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate type"
                android:fontFamily="@font/oswaldlight"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/hireanexpert_rate"
                android:layout_marginRight="@dimen/margin_8dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_16sp">

            </TextView>


        </RelativeLayout>

        <Button
            android:id="@+id/hireanexpert_sendInvitation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:padding="5dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:background="@color/colorWhite"
            android:text="Send Invitation"
            android:fontFamily="@font/oswaldlight"
            android:textColor="@color/colorBlack"
            android:textAllCaps="true">

        </Button>
    </LinearLayout>



</RelativeLayout>