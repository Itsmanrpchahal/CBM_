<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8dp"
    android:background="@color/colorBlack"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/closet_banner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/login_banner1">

        </ImageView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/closet_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8dp"
                android:fontFamily="@font/oswaldlight"
                android:singleLine="true"
                android:text="User name"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <TextView
                android:id="@+id/closet_go_to_closets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAllCaps="true"
                android:fontFamily="@font/oswaldlight"
                android:layout_marginTop="@dimen/margin_8dp"
                android:singleLine="true"
                android:text="Go to event"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <TextView
                android:id="@+id/closet_descripition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/closet_username"
                android:singleLine="true"
                android:text="Closet Description"
                android:textAllCaps="true"
                android:textColor="@color/colorLightWhite">

            </TextView>

            <View
                android:id="@+id/view"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorWhite"
                android:layout_below="@id/closet_descripition">

            </View>


            <TextView
                android:id="@+id/eventstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:fontFamily="@font/oswaldlight"
                android:layout_below="@id/view"
                android:singleLine="true"
                android:text="Start: "
                android:textColor="@color/colorWhite">

            </TextView>

            <TextView
                android:id="@+id/eventend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:fontFamily="@font/oswaldlight"
                android:layout_below="@id/eventstart"
                android:singleLine="true"
                android:text="End:"
                android:textColor="@color/colorWhite">

            </TextView>


            <TextView
                android:id="@+id/event_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventend"
                android:singleLine="true"
                android:textAllCaps="true"
                android:fontFamily="@font/oswaldlight"
                android:text="Type:"
                android:textColor="@color/colorWhite">

            </TextView>

            <TextView
                android:id="@+id/event_createat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_type"
                android:singleLine="true"
                android:textAllCaps="true"
                android:fontFamily="@font/oswaldlight"
                android:text="Created at:"
                android:textColor="@color/colorWhite">

            </TextView>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_type"
                android:layout_marginTop="@dimen/default_margin_16dp"
                android:gravity="right"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/closets_additem"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/oswaldlight"
                    android:text="Add Items"
                    android:textAllCaps="true">

                </Button>

                <Button
                    android:id="@+id/closets_edititem"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:fontFamily="@font/oswaldlight"
                    android:background="@android:color/transparent"
                    android:text="Edit">

                </Button>


                <Button
                    android:id="@+id/closets_delete"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Delete"
                    android:textAllCaps="true"
                    android:fontFamily="@font/oswaldlight">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/layout1"
                android:weightSum="2">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buttonheight"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/oswald_regular"
                    android:text="Invite Customers">

                </Button>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buttonheight"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:fontFamily="@font/oswald_regular"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="5dp"
                    android:text="Invite Colloborators">

                </Button>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>