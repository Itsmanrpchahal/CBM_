<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/whiteborder"
    android:backgroundTint="@color/colorBlack"
    android:padding="@dimen/margin_8dp"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/gig_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gig name"
        android:textSize="@dimen/textsize_16sp"
        android:textColor="@color/colorWhite">

    </TextView>


    <TextView
        android:id="@+id/gig_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gig Detail">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/gig_hour_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hour">

    </TextView>

        <TextView
            android:id="@+id/gig_ratetype_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:text="Rate Type">

        </TextView>

        <TextView
            android:id="@+id/gig_rate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:text="Rate">

        </TextView>

        <TextView
            android:id="@+id/gig_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:text="Status">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gig_edit_bt"
            android:layout_width="50dp"
            android:layout_height="@dimen/margin_40dp"
            android:text="Edit"
            android:textAlignment="textEnd"
            android:textSize="@dimen/textsize_12sp"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="#00000000">

        </Button>


        <Button
            android:id="@+id/gig_delete_bt"
            android:layout_width="80dp"
            android:layout_height="@dimen/margin_40dp"
            android:text="Delete"
            android:textSize="@dimen/textsize_12sp"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="#00000000">

        </Button>

        <Button
            android:id="@+id/gig_sendInvitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:visibility="gone"
            android:textColor="@color/colorWhite"
            android:text="Send Invitation"
            android:textAllCaps="false"
            android:textSize="@dimen/textsize_12sp">

        </Button>
    </LinearLayout>


</LinearLayout>