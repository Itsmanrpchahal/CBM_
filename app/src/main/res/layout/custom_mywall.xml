<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/whiteborderblack"
    android:layout_margin="8dp"
    android:padding="@dimen/margin_8dp">

    <TextView
        android:id="@+id/myWall_closetname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Closet Name"
        android:textSize="@dimen/textsize_16sp"
        android:textColor="@color/colorWhite">

    </TextView>

    <ImageView
        android:id="@+id/myWall_image"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/login_banner">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/myWall_morenext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decs"
                android:textSize="@dimen/textsize_14sp"
                android:textColor="@color/colorWhite">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Update:"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/textsize_14sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/myWall_Decs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decs"
                android:textSize="@dimen/textsize_14sp"
                android:textColor="@color/colorWhite">

            </TextView>


            <TextView
                android:id="@+id/myWall_lastupdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Update: Time"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/textsize_14sp">

            </TextView>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>