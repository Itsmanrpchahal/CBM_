<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/margin_8dp"
        app:cardElevation="@dimen/margin_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/spinnertitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move Item"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/default_margin_16dp"
                android:layout_marginLeft="@dimen/default_margin_16dp"
                android:layout_centerVertical="true">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBlack"
                android:layout_marginTop="@dimen/default_margin_16dp">

            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose closet"
                    android:textSize="@dimen/textsize_16sp"
                    android:textColor="@color/colorTextHint"
                    android:layout_marginLeft="@dimen/default_margin_16dp"
                    android:layout_marginTop="@dimen/default_margin_16dp">


                </TextView>

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorTextHint"
                    android:text="Add New Closet"
                    android:textSize="@dimen/textsize_16sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorTextHint"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/default_margin_16dp"
                    android:layout_marginTop="@dimen/default_margin_16dp">

                </CheckBox>

                <CheckBox
                    android:id="@+id/addoutfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorTextHint"
                    android:text="Add New Outfit"
                    android:visibility="gone"
                    android:textSize="@dimen/textsize_16sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorTextHint"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/default_margin_16dp"
                    android:layout_marginTop="@dimen/default_margin_16dp">

                </CheckBox>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin_16dp"
                android:background="@drawable/blackroundcorners"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/addnewclosetet"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:background="@drawable/blackroundcorners"
                    android:padding="@dimen/margin_8dp"
                    android:visibility="gone"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:hint="Enter New Closet Name">

                </EditText>

                <ListView
                    android:id="@+id/listview"
                    android:layout_margin="@dimen/default_margin_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:backgroundTint="@color/colorBlack"
                    android:foregroundTint="@color/colorBlack"
                    android:background="@color/colorWhite">

                </ListView>

                <ListView
                    android:id="@+id/outfitlist"
                    android:layout_margin="@dimen/default_margin_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    android:backgroundTint="@color/colorBlack"
                    android:foregroundTint="@color/colorBlack"
                    android:background="@color/colorWhite">

                </ListView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_margin="@dimen/default_margin_16dp"
                android:gravity="right">

                <Button
                    android:id="@+id/moveitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blackroundcorner"
                    android:text="Move"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite">

                </Button>

                <Button
                    android:id="@+id/cancelitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_16dp"
                    android:background="@drawable/blackroundcorners"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite">

                </Button>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>