<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Card Details"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/oswald_regular">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_margin="-10dp"
            app:cardElevation="@dimen/margin_8dp"
            app:cardUseCompatPadding="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Card Holdr's name"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:backgroundTint="@android:color/transparent"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorBlack"
                >

            </EditText>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="@dimen/margin_8dp"
            android:layout_margin="-10dp"
            app:cardUseCompatPadding="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Card Holdr's name"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:backgroundTint="@android:color/transparent"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorBlack"
                >

            </EditText>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_tv"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardElevation="@dimen/margin_8dp"
                app:cardUseCompatPadding="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Valid thru"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:backgroundTint="@android:color/transparent"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@color/colorBlack"
                    >

                </EditText>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardElevation="@dimen/margin_8dp"
                app:cardUseCompatPadding="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CVV/CVC"
                    android:singleLine="true"
                    android:layout_margin="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@color/colorBlack"
                    >

                </EditText>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/makeprimarycard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_margin="@dimen/margin_8dp"
                android:textColor="@color/colorBlack"
                android:text="Make primary card"
                android:fontFamily="@font/oswaldlight"
                >

            </Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:gravity="end">

                <Button
                    android:id="@+id/cancel_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="@dimen/margin_8dp"
                    android:text="Cancel"
                    android:fontFamily="@font/oswaldlight"
                    >

                </Button>

                <Button
                    android:id="@+id/save_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="@dimen/margin_8dp"
                    android:text="Save"
                    android:fontFamily="@font/oswaldlight"
                    >

                </Button>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>