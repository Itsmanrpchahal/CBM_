<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/whiteborder">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_8dp"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/colorBlack"
        app:cardElevation="@dimen/margin_8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/default_margin_16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/editprofile_image"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/login_banner1"
                        android:scaleType="fitXY">

                    </ImageView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/editprofile_image"
                        android:layout_marginLeft="@dimen/default_margin_16dp">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textColor="@color/colorWhite"
                            android:textSize="28sp"
                            android:fontFamily="@font/oswaldlight">

                        </TextView>

                        <Button
                            android:id="@+id/update_userimage"
                            android:layout_below="@id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:singleLine="true"
                            android:text="Update profile picture"
                            android:textColor="@color/colorBlack"
                            android:textAlignment="center"
                            android:paddingLeft="@dimen/margin_8dp"
                            android:paddingRight="@dimen/margin_8dp"
                            android:textAllCaps="true"
                            android:fontFamily="@font/oswaldlight"
                            android:background="@color/colorWhite">

                        </Button>
                    </RelativeLayout>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Firstname"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textsize_16sp">


                </TextView>

                <EditText
                    android:id="@+id/editprofile_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginTop="@dimen/default_margin_16dp"
                    android:textColor="@color/colorWhite"
                    android:hint="@string/enterfirstname"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/oswaldlight"
                    android:textColorHint="@color/colorWhite"
                    android:backgroundTint="@color/colorWhite"
                    android:padding="@dimen/margin_8dp">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lastname"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textsize_16sp">


                </TextView>

                <EditText
                    android:id="@+id/editprofile_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:textColor="@color/colorWhite"
                    android:hint="@string/enterlastname"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/oswaldlight"
                    android:textColorHint="@color/colorWhite"
                    android:padding="@dimen/margin_8dp"
                    android:backgroundTint="@color/colorWhite">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textsize_16sp">


                </TextView>

                <EditText
                    android:id="@+id/editprofile_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/oswaldlight"
                    android:hint="@string/enteremail"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/colorWhite"
                    android:padding="@dimen/margin_8dp"
                    android:backgroundTint="@color/colorWhite">

                </EditText>



                <EditText
                    android:id="@+id/editprofile_paypal_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/oswaldlight"
                    android:hint="@string/paypalemail"
                    android:visibility="gone"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/colorWhite"
                    android:padding="@dimen/margin_8dp"
                    android:backgroundTint="@color/colorWhite">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textsize_16sp">


                </TextView>


                <EditText
                    android:id="@+id/editprofile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:textColor="@color/colorWhite"
                    android:hint="@string/enterphone"
                    android:inputType="phone"
                    android:fontFamily="@font/oswaldlight"
                    android:textColorHint="@color/colorWhite"
                    android:padding="@dimen/margin_8dp"
                    android:backgroundTint="@color/colorWhite">

                </EditText>

                <EditText
                    android:id="@+id/editprofile_fburl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/oswaldlight"
                    android:hint="Facebook url"
                    android:inputType="textUri"
                    android:visibility="gone"
                    android:textColorHint="@color/colorWhite"
                    android:padding="@dimen/margin_8dp"
                    android:backgroundTint="@color/colorWhite">

                </EditText>

                <EditText
                    android:id="@+id/editprofile_instaurl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/oswaldlight"
                    android:hint="Instagram url"
                    android:visibility="gone"
                    android:inputType="textUri"
                    android:textColorHint="@color/colorWhite"
                    android:padding="@dimen/margin_8dp"
                    android:backgroundTint="@color/colorWhite">

                </EditText>

                <EditText
                    android:id="@+id/editprofile_twitterurl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/oswaldlight"
                    android:hint="Twitter url"
                    android:visibility="gone"
                    android:inputType="textUri"
                    android:textColorHint="@color/colorWhite"
                    android:padding="@dimen/margin_8dp"
                    android:backgroundTint="@color/colorWhite">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who can send me chat request?"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textsize_16sp">


                </TextView>

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:scrollbars="horizontal"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_alluser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:fontFamily="@font/oswaldlight"
                        android:text="User I follow"
                        android:textColor="@color/colorWhite"
                        android:buttonTint="@color/colorWhite"
                        android:textStyle="bold">

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radio_userifollow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Users"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:fontFamily="@font/oswaldlight"
                        android:textColor="@color/colorWhite"
                        android:buttonTint="@color/colorWhite"
                        android:textStyle="bold">

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radio_noone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No One"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:fontFamily="@font/oswaldlight"
                        android:textColor="@color/colorWhite"
                        android:buttonTint="@color/colorWhite"
                        android:textStyle="bold">

                    </RadioButton>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About me"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textsize_16sp">


                </TextView>

                <EditText
                    android:id="@+id/editprofile_about"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/default_margin_16dp"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/oswaldlight"
                    android:gravity="start"
                    android:inputType="text"
                    android:hint="About me"
                    android:textColorHint="@color/colorWhite"
                    android:padding="@dimen/margin_8dp"
                    android:backgroundTint="@color/colorWhite">

                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/default_margin_16dp"
                    android:layout_marginBottom="@dimen/textsize_16sp">

                    <Button
                        android:id="@+id/changepassword_closebt"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40dp"
                        android:background="@color/colorBlack"
                        android:text="CANCEL"
                        android:fontFamily="@font/oswaldlight"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false">

                    </Button>

                    <Button
                        android:id="@+id/update_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40dp"
                        android:layout_marginLeft="@dimen/default_margin_16dp"
                        android:background="@color/colorWhite"
                        android:text="   Update Profile   "
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswaldlight"
                        android:textColor="@color/colorBlack">

                    </Button>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>

</LinearLayout>