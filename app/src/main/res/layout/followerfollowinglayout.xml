<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:layout_centerInParent="true">

    <TextView
        android:id="@+id/followtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_16dp"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textsize_16sp">

    </TextView>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/followtext"
        android:background="#605E5E">

    </View>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/followrecyclerview"
        android:layout_marginTop="@dimen/default_margin_16dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/view1">

    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/followrecyclerview"
        android:layout_marginTop="@dimen/default_margin_16dp"
        android:background="#605E5E">

    </View>


    <Button
        android:id="@+id/followcancelbt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_40dp"
        android:background="@drawable/blackroundcorner"
        android:layout_below="@id/view2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/default_margin_16dp"
        android:layout_marginRight="@dimen/default_margin_16dp"
        android:layout_marginBottom="@dimen/default_margin_16dp"
        android:text="  Cancel  "
        android:textColor="@color/colorWhite"
        android:textAllCaps="false">

    </Button>

</RelativeLayout>