<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_8dp"
    tools:context=".fragments.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_1"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/onboard_home"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_40dp"
            android:layout_weight="1"
            android:text="Home"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_14sp">

        </TextView>

        <TextView
            android:id="@+id/onboard_pricing"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_40dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:text="Pricing"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/onboard_home"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_14sp">

        </TextView>


        <TextView
            android:id="@+id/onboard_contact"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_40dp"
            android:layout_weight="1"
            android:text="Contact"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/onboard_pricing"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_14sp">

        </TextView>


        <Button
            android:id="@+id/onboard_registerBt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_40dp"
            android:text="Register"
            android:textSize="@dimen/textsize_16sp"
            android:background="@drawable/whiteborder"
            android:visibility="visible"
            android:layout_toRightOf="@id/onboard_contact">

        </Button>


        <Button
            android:id="@+id/onboard_loginBt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_40dp"
            android:text="Login"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:textSize="@dimen/textsize_16sp"
            android:background="@drawable/whiteborder"
            android:layout_toRightOf="@id/onboard_registerBt">

        </Button>


        <View
            android:id="@+id/view1"
            android:layout_width="180dp"
            android:layout_height="2dp"
            android:layout_below="@id/onboard_home"
            android:layout_marginTop="@dimen/default_margin_16dp"
            android:background="@color/colorWhite">

        </View>

        <View
            android:id="@+id/view2"
            android:layout_width="2dp"
            android:layout_height="218dp"
            android:layout_below="@id/view1"
            android:background="@color/colorWhite">

        </View>

        <ImageView
            android:id="@+id/onboard_image"
            android:layout_width="350dp"
            android:layout_height="210dp"
            android:src="@drawable/onboardimage"
            android:scaleType="fitXY"
            android:maxWidth="310dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/view1"
            android:layout_toRightOf="@id/view2"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp">

        </ImageView>

        <TextView
            android:id="@+id/onboard_text"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="@string/onboardtext"
            android:layout_below="@id/onboard_image"
            android:textSize="@dimen/textsize_16sp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/default_margin_16dp"
            android:textAlignment="textStart">

        </TextView>

    </RelativeLayout>

</RelativeLayout>