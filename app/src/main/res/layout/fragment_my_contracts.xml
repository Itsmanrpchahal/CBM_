<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/parent_contract"
    tools:context=".activities.myContracts.tabs.Contract.MyContractsFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/contract_recieved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:text="Customer"
            android:visibility="gone"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="2dp"
            android:textAllCaps="false"
            android:layout_weight="1">

        </Button>

        <Button
            android:id="@+id/contract_sent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:text="Contractor"
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_weight="1">

        </Button>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contracts_as_customer_recycler"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contracts_as_contractor_recycler"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>