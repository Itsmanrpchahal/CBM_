<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/homelinear"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/onboard_home"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_40dp"
        android:layout_weight="1"
        android:text="Home"
        android:gravity="center_vertical"
        android:layout_marginRight="2dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textsize_14sp">

    </TextView>

    <TextView
        android:id="@+id/onboard_pricing"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_40dp"
        android:layout_weight="1"
        android:text="Pricing"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/onboard_home"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textsize_14sp">

    </TextView>


    <TextView
        android:id="@+id/onboard_contact"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_40dp"
        android:layout_weight="1"
        android:text="Contact"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/onboard_pricing"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="2dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textsize_14sp">

    </TextView>


    <Button
        android:id="@+id/onboard_registerBt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_40dp"
        android:text="Register"
        android:textSize="@dimen/textsize_16sp"
        android:background="@drawable/whiteborder"
        android:layout_toRightOf="@id/onboard_contact">

    </Button>


    <Button
        android:id="@+id/onboard_loginBt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_40dp"
        android:text="Login"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:textSize="@dimen/textsize_16sp"
        android:background="@drawable/whiteborder"
        android:layout_toRightOf="@id/onboard_registerBt">

    </Button>
</LinearLayout>