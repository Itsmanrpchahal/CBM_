<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="@dimen/margin_8dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage your plan subscriptions"
                android:layout_margin="@dimen/textsize_16sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="@dimen/textsize_16sp">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorTextHint"
                android:layout_marginTop="@dimen/margin_8dp">

            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current customer plan subscription"
                android:layout_margin="@dimen/textsize_16sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/planname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level-2 ( Active )"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/textsize_16sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_margin="@dimen/margin_8dp">

                <Button
                    android:id="@+id/cancelplan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_weight="1"
                    android:background="@drawable/blackroundcorners"
                    android:text="Cancel plan"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="false">

                </Button>

                <Button
                    android:id="@+id/viewpayments"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_weight="1"
                    android:background="@drawable/blackroundcorners"
                    android:text="View payments"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="false">

                </Button>

                <Button
                    android:id="@+id/changeplan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_weight="1"
                    android:background="@drawable/blackroundcorners"
                    android:text="Change plan"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="false">

                </Button>
            </LinearLayout>

            <Button
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_8dp"
                android:background="#C8C2C2"
                android:textStyle="bold"
                android:text="Close"
                android:layout_marginBottom="@dimen/textsize_16sp"
                android:textColor="@color/colorBlack"
                android:textAllCaps="false">

            </Button>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>