<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_marginBottom="@dimen/margin_8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_16dp">

        <LinearLayout
            android:id="@+id/nflayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notification_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/login_banner"
                >

            </ImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="top"
                android:layout_toRightOf="@id/notification_image"
                android:layout_marginLeft="@dimen/default_margin_16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notification_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:textAllCaps="true"
                    android:text="notification text"
                    android:textColor="@color/colorTextHint">

                </TextView>

                <TextView
                    android:id="@+id/notification_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextHint"
                    android:text="Notification time">

                </TextView>

                <Button
                    android:id="@+id/remove_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="Dismiss"
                    android:layout_gravity="end"
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/textsize_16sp"
                    android:textAllCaps="true"
                    android:layout_below="@id/nflayout">

                </Button>
            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>