<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:padding="@dimen/margin_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open claim"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_16sp"
                    android:layout_margin="@dimen/margin_8dp">

                </TextView>

                <TextView
                    android:id="@+id/contract_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contract#:"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_16sp"
                    android:layout_margin="@dimen/margin_8dp">

                </TextView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBlack">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please describe the issue as accurate as you can"
                android:textColor="@color/colorTextHint"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textSize="@dimen/textsize_16sp"
                android:layout_marginTop="@dimen/margin_8dp">

            </TextView>


            <EditText
                android:id="@+id/issue_et"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textColor="@color/colorBlack"
                android:gravity="start"
                android:padding="@dimen/margin_8dp"
                android:layout_margin="@dimen/margin_8dp"
                android:background="@drawable/blackcorner">

            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:background="@color/colorBlack">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/margin_8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sendclaim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Cliam"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false">

                </Button>

                <Button
                    android:id="@+id/closecliam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Close  "
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:layout_marginLeft="@dimen/default_margin_16dp">

                </Button>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>