<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/sendinviationtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Invitation to"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textsize_16sp"
        android:layout_marginTop="@dimen/textsize_16sp"
        android:layout_marginLeft="@dimen/textsize_16sp">

    </TextView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="@dimen/default_margin_16dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:textSize="@dimen/textsize_16sp">

    </TextView>

    <EditText
        android:id="@+id/sendinviation_messageet"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:inputType="text"
        android:layout_gravity="start"
        android:gravity="start"
        android:padding="5dp"
        android:textColor="@color/colorBlack"
        android:textAlignment="viewStart"
        android:layout_margin="@dimen/default_margin_16dp"
        android:background="@drawable/blackroundcorners">

    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maximum budget for items"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="@dimen/default_margin_16dp"
        android:textSize="@dimen/textsize_16sp">

    </TextView>

    <EditText
        android:id="@+id/sendinviation_budget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="@color/colorBlack"
        android:layout_margin="@dimen/default_margin_16dp"
        android:background="@drawable/blackroundcorners">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="@dimen/margin_8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sendinviation_sendInvitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Invitation"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false">

        </Button>

        <Button
            android:id="@+id/sendinviation_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Cancel  "
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/default_margin_16dp">

        </Button>
    </LinearLayout>
</LinearLayout>