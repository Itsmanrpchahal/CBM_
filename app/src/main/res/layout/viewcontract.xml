<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_8dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contract details"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_16sp">


            </TextView>

            <TextView
                android:id="@+id/contract_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_16sp">


            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_weight="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/contractuser_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/login_banner">


                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:id="@+id/contractuser_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:text="Name"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_16sp">


                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/contractparter_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/login_banner">


                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:id="@+id/contractparter_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:text="Name"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_16sp">


                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/contract_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="Name"
                android:layout_gravity=""
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/textsize_16sp">


            </TextView>

            <TextView
                android:id="@+id/gig_that_genrated_contract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="Name"
                android:layout_gravity=""
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/textsize_16sp">


            </TextView>

            <TextView
                android:id="@+id/rate_agreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="Rate agreed"
                android:layout_gravity=""
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/textsize_16sp">


            </TextView>

            <TextView
                android:id="@+id/type_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="Type of rate"
                android:layout_gravity=""
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/textsize_16sp">


            </TextView>

            <TextView
                android:id="@+id/quantity_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="Quantity"
                android:layout_gravity=""
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/textsize_16sp">


            </TextView>

            <TextView
                android:id="@+id/contract_totalamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="Total amount"
                android:layout_gravity=""
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/textsize_16sp">


            </TextView>

            <TextView
                android:id="@+id/contract_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="Status"
                android:layout_gravity=""
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/textsize_16sp">


            </TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_8dp">


                    <Button
                        android:id="@+id/approvefund_claim"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="#C8C3C3"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:text="Approve job and release"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"
                        android:textAllCaps="false">

                    </Button>

                    <Button
                        android:id="@+id/declienfund_claim"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="#C8C3C3"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:text="Decline job"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"
                        android:textAllCaps="false">

                    </Button>



                    <Button
                        android:id="@+id/open_claim"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="#C8C3C3"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:text="Open Claim"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:layout_marginRight="@dimen/margin_8dp"
                        android:textColor="@color/colorBlack"
                        android:textAllCaps="false">

                    </Button>

                </LinearLayout>

            </HorizontalScrollView>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_8dp">

            </View>


            <Button
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:background="#C8C3C3"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:text="Close"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_8dp"
                android:visibility="visible"
                android:padding="5dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:textColor="@color/colorBlack"
                android:textAllCaps="false">

            </Button>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>